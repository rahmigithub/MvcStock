@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    
}

@using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
{
   

<div class="form-group">
    <label>Kategori Id</label>
    @Html.TextBoxFor(m => m.URUNID, new { @class = "form-control", @ReadOnly = true })

    <br />
    <label>Urun Ad</label>
    @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.URUNAD, "", new { @style = "color:red" })

    <br />
    <label>Urun Marka</label>
    @Html.TextBoxFor(m => m.MARKA, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.MARKA, "", new { @style = "color:red" })


    <br />
    <label>Urun Kategori</label>
    @Html.DropDownListFor(m => m.URUNKATEGORI, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })


    <br />
    <label>Urun Fiyat</label>
    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.FIYAT, "", new { @style = "color:red" })


    <br />
    <label>Urun Stok</label>
    @Html.TextBoxFor(m => m.STOK, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.STOK, "", new { @style = "color:red" })

    @if (Model.isActive == false)
    {
        <br />
        <label>Urun Aktif</label>


        <div class="form-control">
            Evet
            @Html.RadioButtonFor(m => m.isActive, true)
            Hayır
            @Html.RadioButtonFor(m => m.isActive, false)
        </div>

    }

</div>

    <div>

        <button id="urungncelle" class="btn btn-warning" onclick="javascript: return guncelle();">Guncelle</button>
    </div>

}
