@using MvcStok.Models.Entity
@*@model List<TBLMUSTERILER>*@
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">

    <thead>

        <tr>
            <th>MUSTERIID</th>
            <th>MUSTERIAD</th>
            <th>MUSTERISOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            @*<th>SATIŞ RAPOR</th>*@

        </tr>
    </thead>

    <tbody>
        @foreach (var must in Model)
        {
        <tr>
            @if (must.isActive == false)
            {
                <td style="background-color:lightcoral">@must.MUSTERIID</td>
            }
            else
            {
                <td>@must.MUSTERIID</td>
            }
            <td>@must.MUSTERIAD</td>
            <td>@must.MUSTERISOYAD</td>
            <td><a href="/Musteri/SIL/@must.MUSTERIID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Musteri/MusteriGetir/@must.MUSTERIID" class="btn btn-success">GÜncelle</a></td>
            @*<td><a href="/Raporlama/MusDetails/@must.MUSTERIID" class="btn btn-success">Satış Detayını Gör</a></td>*@
        </tr>
        }



    </tbody>

</table>

<a href="/Musteri/YeniMusteri" class="btn btn-primary">YENİ MUSTERİ EKLE</a>


<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });

</script>
